@page "/unauthorized"

@layout EmptyLayout

@inject NavigationManager Nav
@inject IJSRuntime JSRuntime

<TesterBlazor.Components.Pages.ModalesGenericos.ModalVolverLogin />

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("showModal", "unauthorized");
        }
    }
}